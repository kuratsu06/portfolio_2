<div class="top_page">
  <%= render 'home/side_bar' %>

  <div class="main_content">
    <p style="color: green"><%= notice %></p>
    <div class="content_title">
      <h3>日記一覧</h3>
      <%= link_to "新規登録", new_post_path %>
    </div>
    <div id="posts" class="content_box">
      <% @posts.each do |post| %>
        <%= render post %>
        <div class="links">
          <%= link_to "詳細を見る", post %>
        </div>
      <% end %>
    </div>
  </div>
</div>
