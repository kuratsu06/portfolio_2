<div class="top_page">
  <%= render 'home/side_bar' %>

  <div class="main_content">
    <p class="notice"><%= notice %></p>
    <!--<p class="alert"><%= alert %></p>-->
    <div class="content_box">
      <h3>最近登録したコンテンツ</h3>
      <div class="index">
        <% @contents.each do |content| %>
          <p>作成日：<%= content.created_at.strftime('%Y年 %m月 %d日') %></p>
          <p>作品タイトル：<%= content.title %></p>
          <div class="links">
            <%= link_to "編集", edit_content_path(content, @genres) %> |
            <%= link_to "削除", content, method: :delete, data: { confirm: "本当によろしいですか？" } %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="content_box">
      <h3>最近投稿した日記</h3>
      <div class="index">
        <% @posts.each do |post| %>
          <p>投稿日：<%= post.created_at.strftime('%Y年 %m月 %d日') %></p>
          <p>サブタイトル：<%= post.subtitle %></p>
          <p>日記：<%= post.diary %></p>
          <div class="links">
            <%= link_to "詳細", post_path(post) %> |
            <%= link_to "編集", edit_post_path(post, @genres) %> |
            <%= link_to "削除", post, method: :delete, data: { confirm: "本当によろしいですか？" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
