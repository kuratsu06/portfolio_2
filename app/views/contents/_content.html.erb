<div id="<%= dom_id content %>">
  <div class="index_box">
    <p>
      <strong>ジャンル：</strong>
      <span class="next_colon"><%= content.genre.name %></span>
    </p>
    <p>
      <strong>カテゴリ名：</strong>
      <span class="next_colon"><%= content.category.name %></span>
    </p>
    <p>
      <strong>作品名：</strong>
      <span class="next_colon"><%= content.title %></span>
    </p>
    <p>
      <% if (content.genre_id === 1) %>
        <strong>著者名：</strong>
      <% elsif (content.genre_id === 2) %>
        <strong>作者名：</strong>
      <% elsif (content.genre_id === 3) %>
        <strong>監督名・出演者名など：</strong>
      <% else %>
        <strong>アーティスト名：</strong>
      <% end %>
      <span class="next_colon"><%= content.author %></span>
    </p>
    <div class="links">
      <%= link_to "日記を書く", new_post_path(content_id: content.id, content_title: content.title, category_id: content.category_id) %>
      <%= link_to "編集", edit_content_path(content, genre_id: content.genre_id, category_id: content.category.id) %>
      <%= button_to "削除", content, method: :delete %>
    </div>
  </div>
</div>
